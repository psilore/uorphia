{
  "name": "uorphia",
  "version": "1.0.0",
  "description": "uorphia is a skeleton pwa webpack app using metamask.io onbording repository",
  "scripts": {
    "check-eslint-config": "eslint --print-config .eslintrc | eslint-config-prettier-check",
    "check-stylelint-config": "stylelint-config-prettier-check",
    "lint-code": "eslint 'src/scripts/**/*.js'",
    "lint-style": "stylelint 'src/styles/**/*.{css,scss}'",
    "analyze": "webpack-bundle-analyzer ./src/stats.json",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production --profile --json=./src/stats.json",
    "watch": "webpack --watch",
    "serve": "webpack serve"
  },
  "repository": {
    "type": "git",
    "url": ""
  },
  "author": "Erik Emmerfors",
  "license": "GNU",
  "homepage": "https://uorphia.dunderburken.com",
  "dependencies": {
    "@babel/core": "^7.15.8",
    "@metamask/onboarding": "^1.0.1",
    "autoprefixer": "^10.3.7",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^4.0.0",
    "file-loader": "^6.2.0",
    "html-loader": "^2.1.2",
    "html-webpack-plugin": "^5.3.2",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "mini-css-extract-plugin": "^2.4.2",
    "node-sass": "^6.0.1",
    "normalize.css": "^8.0.1",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-loader": "^6.2.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "sass-loader": "^12.2.0",
    "style-loader": "^3.3.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-sass-guidelines": "^8.0.0",
    "stylelint-prettier": "^1.2.0",
    "stylelint-scss": "^3.21.0",
    "webpack": "^5.58.2",
    "webpack-assets-manifest": "^5.0.6",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1",
    "webpack-merge": "^5.8.0",
    "webpack-stats-plugin": "^1.0.3"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.15.8",
    "@webpack-cli/generators": "^2.4.0",
    "copy-webpack-plugin": "^9.0.1",
    "postcss": "^8.3.9",
    "sass": "^1.43.2",
    "url-loader": "^4.1.1",
    "workbox-webpack-plugin": "^6.3.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn check-eslint-config && yarn lint-code && yarn check-stylelint-config && yarn lint-style"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.{css,scss}": [
      "stylelint --fix",
      "git add"
    ]
  }
}
